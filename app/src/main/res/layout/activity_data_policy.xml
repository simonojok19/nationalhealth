<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".activities.DataPolicyActivity">

    <TextView
        android:text="Data Policy and Law"
        android:textSize="20sp"
        android:layout_marginTop="32sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="400sp"
        android:layout_gravity="center"
        android:layout_height="620sp">

    <TextView
        android:id="@+id/data_policy"
        android:text="@string/policy_text"
        android:textSize="15sp"
        android:background="@drawable/bg"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </ScrollView>

    <Button
        android:id="@+id/btn_data_policy"
        android:text="EXIT POLICY"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>